<div class="container">
  <div class="row justify-content-around">
      <%= fa_icon "map-marker 4x" %>
  </div>

  <div class="row justify-content-around"><h3>City In A Day</h3></div>

  <div class="row">
    <div class="col-md-6">
        <div class="new-location">
          <%= simple_form_for [@trail, @location] do |f| %>
          <div class="error-messages">
            <% if @location.errors.any? %>
            <h2><%= pluralize(@location.errors.count, "error") %> prohibiited this answer from being saved:</h2>
            <% end %>

            <% @location.errors.full_messages.each do |message| %>
            <ul>
              <li><%= message %></li>
            </ul>
            <% end %>
          </div>

          <%= f.input :name, label: 'Name of Location', required: false %>
          <%= f.input :location, label: 'Where was it?', required: false %>
          <%= f.input :description, label: 'Tell us a little bit about it Please:', required: false %>
          <%= f.input :price, label: 'What was the price? (ex: 5-10, 10-20)', required: false %>
          <%= f.input :trail_id, as: :hidden, input_html: { value: @trail.id } %>
          <%= f.input :photos, as: :file, label: 'Add Photo' %>
          <%= f.button :submit, 'New Location', id: 'location-creator' %>
          <% end %>
        </div>
    </div>
    <%= render 'form' %>
  </div>

  <div class="row justify-content-around">
    <div class="col-md-12">
      <div id="app"></div>
    </div>
  </div>
</div>


