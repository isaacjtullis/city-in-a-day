<link rel="stylesheet" href="new_form" />
<div class="col-md-6 col-xs-6 text-center">
    <%= simple_form_for [@trail, @location] do |f| %>
    <%= f.input :location, required: false %>
    <%= f.input :description, required: false %>
    <%= f.input :name, required: false %>
    <%= f.input :price, required: false %>
    <%= f.input :trail_id, as: :hidden, input_html: { value: @trail.id } %>
    <div class="button"><%= f.submit 'Edit Location' %></div>
    <% end %>
</div>
<%= render 'edit-form' %>
