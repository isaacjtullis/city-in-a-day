<nav class="navbar fixed-top navbar-light bg-light">
  <a class="navbar-brand" href="#">City In A Day</a>
  <% if user_signed_in? %>
      <ul class="navbar-nav mr-auto">
        <li class="nav-item">
            <%= link_to "#{current_user.first_name} #{current_user.last_name}", profile_path(current_user.id) %>
        </li>
      </ul>
  <% end %>
</nav>

<div class="header cover-photo">
  CITY IN A DAY<br/>
  Where to Next?
</div>
<div class="container">
  <div class="row">
    <div class="col-md-12 location-cards card-group">
      <div class="col-md-3">
        <%= link_to trails_path(:city => "Colorado") do %>
        <div class="card" style="width: 16rem;">
          <img class="card-img-top" src="/assets/mountain.jpg" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title">Colorado Springs</h5>
          </div>
        </div>
        <% end %>
      </div>
      <div class="col-md-3">
        <%= link_to trails_path(:city => "Dallas") do %>
          <div class="card" style="width: 16rem;">
            <img class="card-img-top" src="/assets/dallas.jpg" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title">Dallas</h5>
            </div>
          </div>
        <% end %>
      </div>
      <div class="col-md-3">
        <%= link_to trails_path(:city => "San Francisco") do %>
          <div class="card" style="width: 16rem;">
            <img class="card-img-top" src="/assets/san-francisco.jpg" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title">San Francisco</h5>
            </div>
          </div>
        <% end %>
      </div>
      <div class="col-md-3">
        <%= link_to trails_path(:city => "New York") do %>
          <div class="card" style="width: 16rem;">
            <img class="card-img-top" src="/assets/new-york-city.jpg" alt="Card image cap">
            <div class="card-body">
              <h5 class="card-title">New York</h5>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row justify-content-center find-make-guide">
    <div class="col-sm-3 ciad-button-border-left align-self-center">
      <button class='ciad-button'><%= link_to 'Find an Adventure', searches_path %></button>
    </div>
    <div class="col-sm-3">
      <% if user_signed_in?  %>
        <button class='ciad-button'><%=  link_to 'Make new trail', new_trail_path  %></button>
      <% else %>
        <button class='ciad-button'><%= link_to "Can't Decide..."%></button>
      <% end %>
    </div>
  </div>
</div>


<div class="container">
  <div class="authentication">
    <div class="row justify-content-center">
      <div class="col-md-offset-3 col-md-3 sign-in-button text-center ciad-button">Login</div>
      <div class="col-md-3 sign-up-button text-center ciad-button">Sign up</div>
    </div>
    <div class="row justify-content-center">
      <div id='sign-in-form' class='hide-form'>
        <%= render "devise/sessions/new.html.erb" %>
      </div>
    </div>
    <div class="row justify-content-center">
      <div id="sign-up-form" class="hide-form">
         <%= render 'devise/registrations/new.html.erb' %>
      </div>
    </div>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-md-12 card-group">
    <% @trails.each do |trail| %>
        <div class="col-md-4">
          <div class="card"  style="width: 24rem;">
            <img class="card-img-top" src="/assets/mountain.jpg" alt="Card image cap">
            <div class="card-body">
              <p><%= link_to trail.name, trail_path(trail.id) %></p>
              <%= simple_form_for @favorite do |f| %>
                <div class="post-close">
                  <%= f.input :trail_id, as: :hidden, input_html: { value: trail.id } %>
                  <%= f.submit %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>

