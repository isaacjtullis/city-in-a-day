<div class="container">
  <div class="row">
    <div class=" col-md-offset-1 col-md-1 back-button">
      <%= link_to 'Home', root_path, method: :get  %>
    </div>
  </div>
    <% @trail.locations.each_with_index do |location, index| %>
        <div class="row justify-content-center">
          <div class='col-md-12 circle-container'>
            <div class='number-of-location'>
              <%= "#{index + 1}." %>
            </div>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-md-12">
              <div class="trail-location">
                  <%= "#{location.description}" %>
              </div>
              <div class="bottom-line"></div>
          </div>
        </div>
        <div class="row justify-content-center">
          <div class="col-md-12">
              <div class="trail-info">
                  <%= "#{location.location}" %>
                  <%= "#{location.name}" %>
                  <%= "#{location.price}" %>
                  <%= image_tag location.photos.to_s %>
              </div>
          </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">
                <% if !current_user.nil? && current_user.id == @trail.user_id %>
                    <%= link_to "Edit Location", edit_trail_location_path(location) %>
                    <%= link_to "Delete Location", trail_location_path(location), method: :delete, data: {confirm: "Are you sure you want to delete this question?" } %>
                <% end %>
            </div>
        </div>
    <% end %>
</div>
