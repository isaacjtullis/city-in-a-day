<div class="trail-container">
  <div class="trail-image">
    <%= image_tag @trail.trail_photo %>
  </div>

  <div class="main-content">

    <div class="trail-header">
      Created By: <%= link_to"#{@user.first_name} #{@user.last_name}", profile_path(@user.id) %><br/>
      <%= @trail.name %><br/>
      <%= @trail.mood %>
    </div>

    <div id="location-information">
      <% @locations.each_with_index do |location, index| %>
      <ul>
        <%= "#{index + 1}. #{location.name}" %>
        <%= "#{location.location}" %>
        <%= "#{location.description}" %>
        <%= "#{location.price}" %>
        <% if !current_user.nil? && current_user.id == @trail.user_id %>
        <%= link_to "Edit Location", edit_trail_location_path(location) %>
        <%= link_to "Delete Location", trail_location_path(location), method: :delete, data: {confirm: "Are you sure you want to delete this question?" } %>
        <% end %>
      </ul>
      <% end %>
    </div>
  </div>



  <div class="line-separator"></div>

  <div class="comment-container">
    <%= render 'comment_form' %>
      <% if !@comments.nil? %>
        <% @comments.each do |comment| %>
          <%= comment.description %>
        <% end %>
      <% end %>
  </div>
</div>
